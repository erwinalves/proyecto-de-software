<div class="panel panel-primary">
  <h3> Boletas</h3>
  <span class="tn btn-success btn-lg bt pull-right glyphicon glyphicon-plus"><%= link_to 'Ingresar boleta',new_boletum_path %></span>
</div>

<table class="table">
  <thead>
  <tr>
    <th>ID</th>
    <th>Mostrar</th>
    <th>Editar</th>
    <th>Eliminar</th>
  </tr>
  </thead>
  <tbody>
  <% @boletum.each do |boleta|%>
      <tr>
        <td><%=boleta.id %></td>
        <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', boleta %> </td>
        <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',edit_boleta_path(persona) %></td>
        <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to'Eliminar', boleta , method: :delete, data: {confirm: 'Esta seguro?'} %> </td>
      </tr>
  <%end%>
  </tbody>

</table>
