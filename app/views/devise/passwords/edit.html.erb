<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: "Nueva contraseña", required: true, autofocus: true, hint: ("#{@minimum_password_length} caracteres minimos" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "Confirmar tu nueva contraseña", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "cambiar tu contraseña" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
