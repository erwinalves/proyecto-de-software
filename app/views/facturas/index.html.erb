<%@facturas.each do |factura| %>
<% factura.id %>
<%end%>

<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
  <h3> Facturas</h3>
  <span class="tn btn-success btn-lg bt pull-right glyphicon glyphicon-plus"><%= link_to 'Ingresar factura',new_factura_path %></span>
</div>

<table class="table">
  <thead>
  <tr>
    <th>factura</th>
    <th>Mostrar</th>
    <th>Editar</th>
    <th>Eliminar</th>
  </tr>
  </thead>
  <tbody>
      <% @facturas.each do |factura|%>
         <tr>
        <td><%=factura.id %></td>
        <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', factura %> </td>
