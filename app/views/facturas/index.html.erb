        <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to'Eliminar', factura , method: :delete, data: {confirm: 'Esta seguro?'} %> </td>
      </tr>
  <%end%>
  </tbody>

</table>
  