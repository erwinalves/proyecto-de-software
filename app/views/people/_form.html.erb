<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibido guardar esta persona:</h2>

      <ul>
      <% @person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  


  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre %>
  </div>
    <%= f.label :rol %><br>
    <%= options_for_select([['Jefe (ingrese un 1)',1], ['Vendedor (ingrese un 2)', 2], ['Seguridad (ingrese un 3)', 3]]) %>
  <div class="field">
    <%= f.number_field :rol %>
  </div>
  
  <div class="field">
    <%= f.label :telefono %><br>
    <%= f.number_field :telefono %>
  </div>  

  <div class="actions">
    <%= f.submit "Ingresar Persona" %>
  </div>


<% end %>
