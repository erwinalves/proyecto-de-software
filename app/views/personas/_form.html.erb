<%=  form_for(@persona) do |f| %>
    <% if @persona.errors.any? %>
        <div id="error_explanation"> </div>
        <h5><%= pluralize(@persona.errors.count, "error") %> Prohibido guardar este persona:</h5>

        <ul>
          <% @persona.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :nombre %>
      <%= f.text_field :nombre %>
    </div>

    <div class="field">
      <%= f.label :rol %>
      <%= f.text_field :rol %>
    </div>

    <div class="field">
      <%= f.label :rut %>
      <%= f.text_field :rut %>
    </div> 

    <div class="field">
      <%= f.label :telefono %>
      <%= f.text_field :telefono %>
    </div> 

    <div class="actions">
      <%= f.submit %>
    </div>
    
<% end %>