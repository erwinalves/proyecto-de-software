<p id="notice"><%= notice %></p>

<h1>Lista de Boletas</h1>

<table>
  <thead>
    <tr>
      <th>Vendedor</th>
      <th>Codigo boleta</th>
      <th>Monto</th>
      <th>Cantidad producto</th>
      <th>Tipo pago</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.vendedor %></td>
        <td><%= ticket.codigo_boleta %></td>
        <td><%= ticket.monto %></td>
        <td><%= ticket.cantidad_producto %></td>
        <td><%= ticket.tipo_pago %></td>
        <td><%= link_to 'Mostrar', ticket %></td>
        <td><%= link_to 'Editar', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Eliminar', ticket, method: :delete, data: { confirm: 'Estas seguro de elminar la boleta?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear Boleta', new_ticket_path %>
